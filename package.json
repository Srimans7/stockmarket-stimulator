    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",    // Updated to the latest version
    "node-sass-chokidar": "^2.0.0",          // Updated to the latest version
    "npm-run-all": "^4.1.5",
    "redux-devtools-extension": "^2.13.9",   // Updated to the latest version
    "typescript": "^4.5.2"                   // Updated to the latest version
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-ts": "react-scripts-ts start",
    "start": "npm-run-all -p watch-css start-ts",
    "build": "npm run build-css && react-scripts-ts build",
    "test-watch": "react-scripts-ts test --env=jsdom",
    "test": "react-scripts-ts test --env=jsdom --setupTestFrameworkScriptFile=raf/polyfill --coverage"
  }
}
