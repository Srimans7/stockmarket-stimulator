    "redux-persist": "^6.0.0",
    "redux-saga": "^1.1.3",
    "reselect": "^4.1.2"    // Updated to the latest version
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.5.0",  // Updated to the latest version
    "@storybook/addon-knobs": "^6.5.0",     // Updated to the latest version
    "@storybook/addons": "^6.5.0",          // Updated to the latest version
    "@storybook/react": "^6.5.0",           // Updated to the latest version
    "@types/enzyme": "^3.11.0",             // Updated to the latest version
    "@types/enzyme-adapter-react-16": "^1.0.7",  // Updated to the latest version
    "@types/jest": "^26.0.24",              // Updated to the latest version
    "@types/node": "^16.11.1",              // Updated to the latest version
