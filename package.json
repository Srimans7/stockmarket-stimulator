{
  "name": "stockmarket-simulation",
  "version": "0.1.0",
  "homepage": "/stockmarket-simulation",
  "private": true,
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/**/*.story.{js,jsx,ts,tsx}",
      "!src/**/index.{ts,tsx}",
      "!src/**/*Mocks.{ts,tsx}",
      "!src/**/*Selectors.{ts,tsx}",
      "!src/**/testUtils.{ts,tsx}",
      "!src/registerServiceWorker.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "dependencies": {
    "material-design-icons": "^3.0.1",
    "moment": "^2.29.1",
    "react": "^16.14.0",
    "react-bootstrap": "^1.7.3",
    "react-dom": "^16.14.0",
    "react-notification-system": "^0.4.0",
    "react-redux": "^7.2.5",
    "react-router-dom": "^5.3.0",
    "react-scripts-ts": "^5.2.1",
    "recharts": "^2.1.4",
    "redux": "^4.1.2",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.1.3",
    "reselect": "^4.1.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.5.0",
    "@storybook/addon-knobs": "^6.5.0",
    "@storybook/addons": "^6.5.0",
    "@storybook/react": "^6.5.0",
    "@types/enzyme": "^3.11.0",
    "@types/enzyme-adapter-react-16": "^1.0.7",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.11.1",
    "@types/react": "^17.0.38",
    "@types/react-bootstrap": "^0.32.25",
    "@types/react-dom": "^17.0.10",
    "@types/react-notification-system": "^0.2.39",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@types/recharts": "^1.8.15",
    "@types/storybook__addon-actions": "^5.2.3",
    "@types/storybook__addon-knobs": "^5.2.3",
    "@types/storybook__react": "^5.2.3",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "node-sass-chokidar": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "redux-devtools-extension": "^2.13.9",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-ts": "react-scripts-ts start",
    "start": "npm-run-all -p watch-css start-ts",
    "build": "npm run build-css && react-scripts-ts build",
    "test-watch": "react-scripts-ts test --env=jsdom",
    "test": "react-scripts-ts test --env=jsdom --setupTestFrameworkScriptFile=raf/polyfill --coverage"
  }
}
